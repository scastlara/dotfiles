{
  // MAIN SETTINGS
  "editor.fontSize": 14,
  "editor.smoothScrolling": true,
  "editor.lineNumbers": "relative",
  "editor.formatOnSave": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.dragAndDrop": false,
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "'FiraCode Nerd Font', monospace",
  "editor.fontLigatures": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.minimap.enabled": false,
  "editor.multiCursorPaste": "spread",
  "workbench.panel.defaultLocation": "right",
  "workbench.iconTheme": "vscode-icons",
  "workbench.list.smoothScrolling": true,
  "workbench.colorTheme": "GitHub Dark Dimmed",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.fontFamily": "'FiraCode Nerd Font'",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.middleClickBehavior": "paste",
  "zenMode.hideLineNumbers": false,
  "zenMode.hideStatusBar": false,
  "window.title": "${rootName}${separator}${activeEditorMedium}",
  "editor.semanticTokenColorCustomizations": {
    "[Material Theme]": {
      "rules": {
        "variable.readonly:python": "#c7b0f0",
        "variable:python": "#fff",
        "selfParameter:python": "#f07178",
        "clsParameter:python": "#f07178",
        "parameter:python": "#f3b8b8"
      }
    },
    "[GitHub Dark]": {
      "rules": {
        "selfParameter:python": "#f07178",
        "clsParameter:python": "#f07178"
      }
    },
    "[GitHub Dark Dimmed]": {
      "rules": {
        "selfParameter:python": "#f07178",
        "clsParameter:python": "#f07178"
      }
    }
  },

  // PYTHON SETTINGS
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit"
    },
    "editor.formatOnType": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["-s", "-v"],
  "python.testing.pytestPath": "poetry run pytest",
  "python.languageServer": "Pylance",
  "python.analysis.indexing": true,
  "python.experiments.enabled": false,
  "python.analysis.extraPaths": ["src", "acceptance_tests"],
  "python.analysis.autoImportCompletions": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "ruff.lint.args": ["--unfixable=F401,F841"],
  "ruff.lint.run": "onType",
  "mypy-type-checker.importStrategy": "fromEnvironment",

  // VIM MODE SETTINGS
  "vim.cursorStylePerMode.insert": "line-thin",
  "vim.cursorStylePerMode.normal": "block",
  "vim.cursorStylePerMode.visual": "underline-thin",
  "vim.useSystemClipboard": true,
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": ["#81a1c1", "#ffffff"],
  "vim.statusBarColors.insert": ["#c882e7", "#000"],
  "vim.statusBarColors.surroundinputmode": ["#c882e7", "#ffffff"],
  "vim.statusBarColors.visual": ["#5b9c55", "#ffffff"],
  "vimFindHighlight.charPrimaryColor": "rgb(199, 100, 8)",
  "vim.smartRelativeLine": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "p"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["editor.action.marker.previous"]
    }
  ],
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },
  "vim.camelCaseMotion.enable": true,
  "vim.replaceWithRegister": true,
  "vim.highlightedyank.enable": true,

